<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}eventManager{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav>
    <ul>
        <a href="{{ path("page_accueil") }}">
            <li>Accueil</li>
        </a>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path("logout") }}">
                <li>Se d√©connecter ({{ app.user.username }})</li>
            </a>
        {% else %}
            <a href="{{ path("login") }}">
                <li>Se connecter</li>
            </a>
        {% endif %}
    </ul>
</nav>
<pre>
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}


    {% if is_granted('ROLE_ADMIN') %}
        Administrator : {{ app.user.username }}
    {% elseif is_granted('ROLE_USER') %}
        User : {{ app.user.username }}
    {% else %}
        Anonymous
    {% endif %}
    </pre>
</body>
</html>
