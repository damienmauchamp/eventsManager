<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}eventManager{% endblock %}</title>
    {% block stylesheets %}
        {% include 'headers/stylesheets.html.twig' %}
    {% endblock %}
    {% block scripts %}
        {# SCRIPTS #}
        {% include 'headers/scripts.html.twig' %}
    {% endblock %}

    <link rel="stylesheet" href="{{ asset('css/select2.css') }}" />
    <script src="{{ asset('js/select2.full.js') }}"></script>
</head>
<body>
<nav>
    {# NAVBAR #}
    {% include 'navbar.html.twig' %}
</nav>
<div class="search-container">
    <div class="input-group">
        <input type="text" class="form-control" id="search" name="_search"
               placeholder="Rechercher..." aria-label="Recipient's username" aria-describedby="search-addon"/>
        <div class="input-group-append" id="search-addon-wrap">
            <span class="input-group-text" id="search-addon">X</span>
        </div>
    </div>
</div>


{% for label, messages in app.session.flashbag.all %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}{% endblock %}
{% block endjs %}{% endblock %}
</body>
</html>
