{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
    <div class="login-wrap">
        <div class="login-error">
            {% if erreur %}
                <p>Vérifiez vos identifiants</p>
                {#<p>{{ erreur.messageKey|trans(erreur.messageData, "security") }}</p>#}
            {% endif %}
        </div>
        <form action="{{ path("login") }}" method="post">

            <div class="form-group">
                <input type="text" class="" id="username" name="_username" value="{{ login }}"
                       placeholder="Nom d'utilisateur"/>
            </div>
            <div class="form-group">
                <input type="password" class="" id="password" name="_password" value="{{ login }}"
                       placeholder="Mot de passe"/>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button type="submit">Se connecter</button>
        </form>
        <a href="{{ path("page_oublie_mdp") }}">Mot de passe oublié</a>
    </div>
{% endblock %}
