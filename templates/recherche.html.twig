{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Recherche{% endblock %}

{% block body %}

    <h1>Résultat pour « {{ query }} »</h1>

    <h1>Évènements correspondants :</h1>
    {% for event in events %}
        <a href="{{ path("page_evenement", {id : event.id }) }}">{{ event.name }}</a><br/>
    {% endfor %}

    {# Paginateur #}
    {% if page > 1 %}
        <a href="{{ path("page_recherche_str", { query : query }) }}?page={{ page-1 }}&max-results={{ limit }}">
            Précédent
        </a>
    {% endif %}
    Page {{ page }}
    {% if nextPage %}
        <a href="{{ path("page_recherche_str", { query : query }) }}?page={{ page+1 }}&max-results={{ limit }}">
            Suivant
        </a>
    {% endif %}

{% endblock %}